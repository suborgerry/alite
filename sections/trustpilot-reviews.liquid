<script>
document.addEventListener("DOMContentLoaded", function () {
  const wrapper = document.querySelector('.swiper-wrapper');
  const leftBtn = document.querySelector('.faq-left');
  const rightBtn = document.querySelector('.faq-right');
  const card = wrapper.querySelector('.swiper-slide');
  const isMobile = window.innerWidth < 1000;

  const getCardWidth = () => card.offsetWidth + 20;

  if (!isMobile) {
    let scrollPosition = 0;

    const updateButtons = () => {
      const maxScroll = wrapper.scrollWidth - wrapper.clientWidth;
      leftBtn.classList.toggle('button-active', scrollPosition > 0);
      rightBtn.classList.toggle('button-active', scrollPosition < maxScroll);
    };

    const scrollTo = (dir) => {
      scrollPosition += dir * getCardWidth();
      const maxScroll = wrapper.scrollWidth - wrapper.clientWidth;

      scrollPosition = Math.max(0, Math.min(scrollPosition, maxScroll));
      wrapper.style.transform = `translateX(-${scrollPosition}px)`;
      updateButtons();
    };

    leftBtn.addEventListener('click', () => scrollTo(-1));
    rightBtn.addEventListener('click', () => scrollTo(1));
    updateButtons();
  } else {
    // На мобиле нативный scroll работает сам, но можно подсказать scroll snap
    wrapper.scrollLeft = 0;
  }
});
</script>







