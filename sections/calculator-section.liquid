<style>
  .yearly {
    font-variant-numeric: tabular-nums;
    /* Чтобы число не "прыгало" по ширине при росте */
  }

  .top-row {
    display: flex;
  }
  .title-mob {
    display: none
  }
  .top-block {
    position: relative;
    display: flex;
    flex-grow: 1;
    justify-content: center;
    font-size: 20px;
    color: #00000080;
    background-color: #F2F2F2;
    padding: 30px;
    border-bottom: 2px solid rgba(0, 0, 0, 0);
    transition: all 0.3s;
    cursor: pointer;
    line-height: 1;
  }
  .top-block span {
    font-size: 20px;
    color: #00000080;
    line-height: 1;
    font-weight: 500;
  }
  .top-block:first-child {
    border-top-left-radius: 15px;
  }

  .top-block:last-child {
    border-top-right-radius: 15px;
  }
  .primary {
    color: #000;
    background-color: #FFF;
    border-bottom: 2px solid #4BFE85;
    cursor: initial;
  }
  .primary span {
    color: #000;

  }
  .top-block:hover {
    border-bottom: 2px solid #DA9DFF;
  }
  .primary:hover {
    border-bottom: 2px solid #4BFE85;
  }
  .calculator-title {
    font-size: 30px;
    font-weight: 700;
    margin-bottom: 12px !important;
  }
  .calculator-subtitle {
    font-size: 25px;
    font-weight: 700;
    margin-bottom: 12px;
    margin-top: 30px;
  }
  .calculator-info {
    display: grid;
    grid-template-columns: 1fr 1fr 2fr;
    gap: 16px;
  }
  .calculator-block {
    background-color: #F9F9F9;
    padding: 20px 50px;
    border-radius: 16px;
    display: flex;
    justify-content: center;
    flex-direction: column;
  }
  .calculator-block_title {
    font-size: 16px;
    font-weight: 500;
    margin: 0;
    color: #00000080;
  }
  .calculator-block_text {
    font-size: 36px;
    font-weight: 700;
    margin: 0;
    color: #000;
    line-height: 1;
  }
  .calculator-block-large {
    background-color: #4BFE85;
    margin-left: 60px;
    display: grid;
    grid-template-rows: 1fr 1fr;
    justify-content: space-between;

  }
  .calculator-block-large svg {
    grid-column: 2;
    grid-row: 1;
  }
  .calculator-block-large .calculator-block_title,
  .calculator-block-large .calculator-block_text {
    grid-column: 1
  }
  .calculator-block-large .calculator-block_title {
    color: #000000;
  }
  .calculator-container {
    margin-bottom: 30px;
  }
  @media screen and (max-width: 900px) {
    .title-mob {
      display: inline-block
    }
    .title-pc {
      display: none;
    }
    .calculator-title {
      font-size: 16px
    }
    .calculator-subtitle {
      font-size: 16px
    }
    .calculator-info {
      grid-template-columns: 1fr 1fr;
    }
    .calculator-block {
      grid-column: 1;
      text-align: center;
      padding: 15px;
    }

    .calculator-block-large {
      text-align: start;
      align-items: start;
      grid-column: 2;
      grid-row: 1 / 3;
      background-color: #4BFE85;
      margin-left: 0;
      display: flex;
      grid-template-rows: 1fr 1fr;
      justify-content: space-between;
    }
    .calculator-block-large svg {
      display: none;
    }
    .top-block {
      padding: 20px 10px;
      font-size: 16px;
    }
  }
  @media screen and (max-width: 500px) {
    .calculator-block_text {
      font-size: 30px;
      font-weight: 700;
      margin: 0;
      color: #000;
      line-height: 1;
    }
    .top-block span {
      font-size: 14px;
      color: #00000080;
      line-height: 1;
      font-weight: 500;
    }
  }
</style>
<div class="page-width calculator-container">
  <h2 class="calculator-title">{{ section.settings.title }}</h2>
  <div class="calculator">
    <div class="top-row">
      {% for block in section.blocks %}
        <div
          class="top-block block-{{ forloop.index }} {% if block.settings.is_primary %}primary{% endif %}"
          data-year="{{ block.settings.yearly }}"
          data-average="{{ block.settings.average }}"
          data-complete="{{ block.settings.complete}}">
          <span
            {% if block.settings.show_badge %}
            style="color:#000"
            {% endif %}
            class="title-pc">{{ block.settings.title }}</span>
          <span
            {% if block.settings.show_badge %}
            style="color:#000"
            {% endif %}
            class="title-mob">{{ block.settings.title_mob }}</span>
        </div>
        {% if block.settings.show_badge %}
          <style>
            .block-{{ forloop.index }}::after {
              content: "{{ "products.product.top" | t }}";
              position: absolute;
              top: -10px;
              left: 50%;
              transform: translateX(-50%);
              background-color: #FF0000;
              color: #FFFFFF;
              font-size: 12px;
              font-weight: bold;
              border-radius: 12px;
              padding: 6px 12px;
              line-height: 1;
              z-index: 2;
              white-space: nowrap;
            }
            @media screen and (max-width: 900px) {
              .block-{{ forloop.index }}::after {
                content: "{{ "products.product.top" | t }}";
                position: absolute;
                top: -10px;
                left: 50%;
                white-space: nowrap;
                transform: translateX(-50%);
                background-color: #FF0000;
                color: #FFFFFF;
                font-size: 10px;
                font-weight: bold;
                border-radius: 12px;
                padding: 6px 12px;
                line-height: 1;
                z-index: 2;
              }
            }
          </style>
        {% endif %}
      {% endfor %}
    </div>
    <div class="info-block">
      {% for block in section.blocks %}
        {% if block.settings.is_primary %}
          {% assign average = block.settings.average %}
          {% assign yearly = block.settings.yearly %}
          {% assign complete = block.settings.complete %}
        {% endif %}
      {% endfor %}
      <h3 class="calculator-subtitle">{{ section.settings.subtitle }}</h3>
      <div class="calculator-info">
        <div class="calculator-block">
          <p class="calculator-block_title">{{ "products.product.average" | t }}</p>
          <p class="calculator-block_text">
            <span class="average">{{ average }}</span>$</p>
        </div>
        <div class="calculator-block">
          <p class="calculator-block_title">{{ "products.product.yearly" | t }}</p>
          <p class="calculator-block_text calculator-block_text_yearly ">
            <span class="yearly">{{ yearly }}</span>$</p>
        </div>
        <div class="calculator-block calculator-block-large">
          <p class="calculator-block_title">{{ section.settings.complete_text }}</p>
          <p class="calculator-block_text">≈<span class="complete">{{ complete }}</span>$</p>
          {% render 'dollar-icon' %}
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  const averageEl = document.querySelector(".average");
  const yearlyEl = document.querySelector(".yearly");
  const completeEl = document.querySelector(".complete");
  const buttons = document.querySelectorAll(".top-block");

  function animateNumberChange(element, start, end, duration = 300) {
    let startTime = null;
    start = parseInt(start, 10);
    end = parseInt(end, 10);

    function animate(currentTime) {
      if (!startTime) startTime = currentTime;
      const elapsed = currentTime - startTime;
      const progress = Math.min(elapsed / duration, 1);
      const currentValue = Math.floor(start + (end - start) * progress);
      element.textContent = currentValue;

      if (progress < 1) {
        requestAnimationFrame(animate);
      }
    }

    requestAnimationFrame(animate);
  }

  buttons.forEach(button => {
    button.addEventListener("click", function(e) {
      let target = e.target;
      if (!target.classList.contains("top-block")) {
        target = e.target.closest(".top-block");
      }
      if (target.classList.contains("primary")) {
        return;
      }
      document.querySelector(".primary").classList.remove("primary");
      target.classList.add("primary");

      // Анимируем изменения чисел
      animateNumberChange(averageEl, averageEl.textContent, target.dataset.average);
      animateNumberChange(yearlyEl, yearlyEl.textContent, target.dataset.year);
    })
  });
</script>
