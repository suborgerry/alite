    margin-left: -9px;
  }

  .ts-footer__content {
    width: 100%;
  }

  .ts-footer__content * {
    margin: 0 0 14px;
    padding: 0;
    color: #FFF;
    font-family: "ShopifySans" !important;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 220%; /* 35.2px */
