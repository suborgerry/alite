    font-size: 20px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
  }

  .ts-footer__newsletter form {
    margin: 0;
  }

  .ts-footer__newsletter-field {
    display: flex;
    gap: 13px;
  }

  .ts-newsletter__input {
    display: flex;
    width: 355px;
    height: 44px;
    padding: 10px 18px;
    align-items: center;
    gap: 10px;
    border-radius: 52px;
    border: 1px solid #6A6A6A;
    color: #8F8F8F;
    font-family: "ShopifySans" !important;
    font-size: 12px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    background: transparent;
  }

  .ts-newsletter__input:focus-visible {
    outline: none;
    box-shadow: none;
  }

  .ts-newsletter__button {
    display: flex;
    width: 116px;
    height: 44px;
    padding: 10px 18px;
    justify-content: center;
    align-items: center;
    gap: 10px;
    border-radius: 52px;
    background: #FFF;
    color: #000;
    font-family: "ShopifySans" !important;
    font-size: 12px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    border: 0;
    outline: none;
