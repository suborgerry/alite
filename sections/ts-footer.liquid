  {% if section.settings.email_subscription %}
    <div class="ts-footer__newsletter ts-newsletter">
      <p class="ts-newsletter__label">
        {{ section.settings.email_subscription_label }}
      </p>

      {%- form 'customer', id: 'ContactFooter' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="ts-footer__newsletter-field">
          <input
            id="NewsletterForm--{{ section.id }}"
            type="email"
            name="contact[email]"
            class="ts-newsletter__input"
            value="{{ form.email }}"
            aria-required="true"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              autofocus
              aria-invalid="true"
              aria-describedby="ContactFooter-error"
            {% elsif form.posted_successfully? %}
              aria-describedby="ContactFooter-success"
            {% endif %}
            placeholder="{{ 'ts.footer.email' | t}}"
            required
          />
          <button
            type="submit"
            class="ts-newsletter__button"
            name="commit"
            id="Subscribe"
            aria-label="{{ 'newsletter.button_label' | t }}"
          >
            {{ 'ts.footer.sign_up' | t}}
          </button>
        </div>
        <span class="visually-hidden">{{ form | json }}</span>
        {%- if form.errors -%}
          <small class="newsletter-form__message form__message" id="ContactFooter-error">
            {% render 'icon-success' -%}
            {{- 'newsletter.subscribed' | t }}
          </small>
        {%- endif -%}
        {%- if form.posted_successfully? -%}
          <h3
            class="newsletter-form__message newsletter-form__message--success form__message"
            id="ContactFooter-success"
            tabindex="-1"
            autofocus
          >
            {% render 'icon-success' -%}
            {{- 'newsletter.success' | t }}
          </h3>
        {%- endif -%}
      {%- endform -%}
    </div>
