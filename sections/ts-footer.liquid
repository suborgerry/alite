  .ts-footer__content a {
    text-decoration: none;
    color: #2FDF84;
  }

  .ts-footer__social-block {
    width: 600px;
  }

  .ts-footer__social.ts-social {
    width: 100%;
    display: flex;
    border-top: 1px solid #fff;
    border-bottom: 1px solid #fff;
    margin: 0 0 30px;
  }

  .ts-social__card {
    width: 150px;
    aspect-ratio: 1 / 1;
    display: flex;
    align-items: center;
    justify-content: center;
    border-right: 1px solid #fff;
  }

  .ts-social__card:last-of-type {
    border-right: 0;
  }

  .ts-social__card p,
  .ts-social__card a {
    width: fit-content;
    margin: 0;
    display: flex;
    padding: 15px;
    border-radius: 100px;
    border: 1px solid #000;
    cursor: pointer;
  }

  .ts-social__card p:hover,
  .ts-social__card a:hover {
    border: 1px solid #fff;
  }

  .ts-social__card p {
    position: relative;
  }

  .ts-social__card .ts-footer__tooltip {
    position: absolute;
    top: calc(100% + 10px);
    left: 50%;
    transform: translateX(-50%);
    background: #fff;
    white-space: nowrap;
    font-family: "ShopifySans" !important;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 1;
    padding: 8px 16px;
    border-radius: 8px;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s;
    display: none;
  }

  .ts-social__card .ts-footer__tooltip[open] {
    opacity: 1;
  }

  .ts-social__card .ts-social__icon {
    display: flex;
  }

  .ts-social__card .ts-social__icon svg {
    width: 30px;
    height: 30px;
  }

  .ts-footer__menu-container {
    padding: 20px 20px 0;
  }

  .ts-footer__menu {
    margin: 0;
    padding: 0;
    display: grid;
    grid-template-columns: 1fr 1fr;
    list-style: none;
  } 

  .ts-footer__menu li a {
    font-family: "ShopifySans" !important;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 220%;
    color: #fff;
    text-decoration: none;
  }

  .ts-footer__menu li {
    display: flex;
    margin-bottom: 10px;
    padding-bottom: 0px !important;
  }

  .ts-footer__menu li a:hover {
    text-decoration: underline;
    text-decoration-color: #4BFE85;
    text-underline-offset: 10px;
  }

  .newsletter-form__message {
    color: #fff;
  }

  @media screen and (max-width: 989px) {
    .ts-footer__newsletter.ts-newsletter {
