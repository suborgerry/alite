    cursor: pointer;
  }

  .ts-newsletter__button:hover {
    background-color: rgba(218,157,255,1);
  }

  .ts-footer__marquee {
    width: 100%;
    background: #4BFE85;
    padding: 14px 0;
    overflow: hidden;
    margin-bottom: 50px;
  }

  .ts-footer__marquee-inner {
    position: relative;
    display: flex;
    height: 100%;
    width: fit-content;
    transform: translate3d(-25%,0,0);
    animation: marquee 15s linear infinite;
    animation-play-state: running;
  }

  .ts-footer__marquee-label {
    width: max-content;
    display: flex;
    gap: 24px;
    align-items: center;
    padding: 0 12px;
  }

  .ts-footer__marquee-label .ts-footer__marquee-icon {
    display: flex;
  }

  .ts-footer__marquee-label span:not(.ts-footer__marquee-icon) {
    white-space: nowrap;
    color: #000;
    font-family: 'Grtsk' !important;
    font-size: 32px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
  }

