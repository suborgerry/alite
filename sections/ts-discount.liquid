<style>
  .ts-discount__container {
    max-width: 1200px;
    padding: 0 50px;
    margin: 0 auto;
  }

  .ts-discount__container h2 {
    color: #000;
    font-family: "ShopifySans" !important;
    font-size: 32px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    text-align: center;
    padding: 0px 0 12px 0;
    margin: 0;
  }

  .ts-discount__blocks {
    display: flex;
    gap: 20px;
  }

  .ts-discount__blocks > div {
    width: calc(50% - 10px);
  }

  .ts-discount__left h3,
  .ts-discount__right h3 {
    color: #000;
    font-family: "ShopifySans" !important;
    font-size: 24px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    margin: 0;
  }

  .ts-discount__left p,
  .ts-discount__message-1,
  .ts-discount__message-2,
  .ts-discount__main-final {
    color: #000;
    font-family: "ShopifySans" !important;
    font-size: 12px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    margin: 0;
  }

  .ts-discount__message-1 {
    margin: 8px 0 16px;
  }

  .ts-discount__message-2,
  .ts-discount__main-final {
    margin: 12px 0 0;
  }

  .ts-discount__left p {
    max-width: 320px;
    margin: 16px 0 0;
  }

  .ts-discount__bar {
    display: flex;
    align-items: center;
    gap: 15px;
  }

.ts-controlbar__checkout {
  display: flex;
  width: 428px;
  height: 50px;
  padding: 10px;
  justify-content: center;
  align-items: center;
  gap: 10px;
  flex-shrink: 0;
  cursor: pointer;
  border-radius: 47px;
  background: #4BFE85;
  color: #000;
  text-align: center;
  font-family: "ShopifySans";
  font-size: 14px;
  font-style: normal;
  font-weight: 500;
  line-height: normal;
  transition: all .15s;
  transition-timing-function: cubic-bezier(.4,0,.2,1);
}
  .ts-controlbar__checkout:hover,
  .ts-controlbar__checkout.active {
    background: #DA9DFF;
  }
  
  .ts-discount__bar > span {
    color: #000;
    font-family: "ShopifySans" !important;
    font-size: 12px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }

  .ts-discount__bar .ts-bar {
    width: 400px;
    height: 10px;
    border: 1px solid #D4D4D4;
    border-radius: 9px;
    position: relative;
  }

  .ts-discount__bar .ts-bar span {
    position: absolute;
    top: -1px;
    left: -1px;
    width: 10%;
    min-width: 10%;
    height: 10px;
    border-radius: 9px;
    transition: width 0.5s, background 0.3s;
  }

  .ts-discount__bar.error .ts-bar span {
    background: #FE4B4B;
  }

  .ts-discount__bar.warn .ts-bar span {
    background: #FFC001;
  }

  .ts-discount__bar.success .ts-bar span{
    background: #48FA7A;
  }

  .ts-discount__main.final .ts-discount__message-2,
  .ts-discount__main-final {
    display: none;
  }

  .ts-discount__main.final .ts-discount__main-final {
    display: block;
  }

  @media screen and (max-width: 989px) {
    .ts-discount__bar .ts-bar {
      width: 130px;
    }

    .ts-discount__blocks {
      flex-direction: column;
      gap: 20px;
      margin-bottom: 30px;
    }

    .ts-discount__blocks > div {
      width: 100%;
    }

    .ts-discount__container h2 {
      padding: 30px 0;
    }
  }

  @media screen and (max-width: 749px) {
    .ts-discount__container {
      padding: 0 16px;
    }

    .ts-discount__right {
      display: none;
    }
  }
</style>

<div class="ts-discount">
  <div class="ts-discount__container"> 
    {% if section.settings.title != blank %}
      <h2>
        {{ section.settings.title }}
      </h2>
    {% endif %}

    <div class="ts-discount__blocks">
      <div class="ts-discount__left">
        {% if section.settings.left_title != blank %}
          <h3>
            {{ section.settings.left_title }}
          </h3>
        {% endif %}

        {% if section.settings.left_message != blank %}
          <p class="">
            {{ section.settings.left_message }}
          </p>
        {% endif %}
      </div>

      <div class="ts-discount__right">
        {% if section.settings.right_title != blank %}
          <h3>
            {{ section.settings.right_title }}
          </h3>
        {% endif %}

        {% if section.settings.right_message_1 != blank %}
          <p class="ts-discount__message-1">
            {{ section.settings.right_message_1 }}
          </p>
        {% endif %}

        <div class="ts-discount__bar error">
          <div class="ts-bar">
            <span>
            </span>
          </div>
          <span data-discount>10{{ 'ts.bar.right_discount' | t }}</span>
        </div>

        {% if section.settings.right_message_2 != blank %}
          <div class="ts-discount__main">
            <p class="ts-discount__message-2">
              {{ section.settings.right_message_2 }}
            </p>
            <p class="ts-discount__main-final">
              {{ 'ts.bar.congratulations' | t }}<strong>{{ 'ts.bar.discount' | t }}</strong>
            </p>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "TS Discount",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "header",
        "content": "Left content"
      },
      {
        "type": "text",
        "id": "left_title",
        "label": "Title"
      },
      {
        "type": "inline_richtext",
        "id": "left_message",
        "label": "Message"
      },
      {
        "type": "header",
        "content": "Right content"
      },
      {
        "type": "text",
        "id": "right_title",
        "label": "Title"
      },
      {
        "type": "inline_richtext",
        "id": "right_message_1",
        "label": "Message"
      },
      {
        "type": "inline_richtext",
        "id": "right_message_2",
        "label": "Message"
      }
    ],
    "presets": [
      {
        "name": "TS Discount"
      }
    ]
  }
{% endschema %}