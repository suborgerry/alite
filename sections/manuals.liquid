<section class="installation-guide page-width">
  <div class="container">
    <div class="steps">
      {% for block in section.blocks %}
        <div class="step">
          <div class="step-text">
            <div class="text-container">
              <div class="title-container"> 
                <p>{{ block.settings.title }}</p> 
                <p>|</p> 
                <p>{{ block.settings.title1 }}</p>
              </div>
              <p>{{ block.settings.text }}</p>
            </div>
            {% if block.settings.image %}
            <div class="step-image">
              <img src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ block.settings.title }}">
            </div>
            {% endif %}
          </div>
          {% assign button_count = 0 %}
          {% if block.settings.button_text_1 != blank %}
            {% assign button_count = button_count | plus: 1 %}
          {% endif %}
          {% if block.settings.button_text_2 != blank %}
            {% assign button_count = button_count | plus: 1 %}
          {% endif %}
          {% if block.settings.button_text_3 != blank %}
            {% assign button_count = button_count | plus: 1 %}
          {% endif %}
          
          <div class="buttons button-count-{{ button_count }}">
              {% if block.settings.button_text_1 != blank %}
              <a href="{{ block.settings.button_link_1 }}" class="button" target="_blank">{{ block.settings.button_text_1 }} <span class="icon"><svg width="24" height="25" viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg">
