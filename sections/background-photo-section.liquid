<style>
  .background-image_section {
    margin-top: 30px;
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
  .background-image_section img {
    width: 100%;
    display: block;
  }
  .background-image-section-content {
    display: flex;
    justify-content: flex-end;
    padding: 100px 0;
    line-height: 1;
  }
  .background-image_section_subtitle {
    margin-bottom: 16px;
    font-size: 16px;
    font-weight: 700;
    display: flex;
    gap: 12px;
    color: #000;
  }
  .background-image_section_title {
    font-size: 36px;
    font-weight: 700;
    margin: 0 0 10px;
  }
  .background-image_section_text {
    font-size: 20px;
    color: #000;
    max-width: 400px;
    line-height: 1.4;
    margin: 0 0 40px;
  }
  .background-image_section_button:link,
  .background-image_section_button:visited {
    color: #fff;
    text-decoration: none;
    background-color: #000;
    padding: 20px 64px;
    font-size: 16px;
    border-radius: 30px;
    display: inline-block;
    border: 1px solid #000;
    transition: all 0.3s;
  }
  .background-image_section_button:hover,
  .background-image_section_button:active {
    background-color: #da9dff;
    color: #000;
    border: 1px solid #000;
  }
  @media screen and (max-width: 1200px) {
    .background-image-section-content {
      padding: 50px 0;
    }
    .background-image_section_title {
      font-size: 30px;
    }
    .background-image_section_text {
      font-size: 18px;
    }
    .background-image_section {
    margin-top: 100px;
    display: grid;
    grid-template-columns: 1fr;
  }
  }
  @media screen and (max-width: 990px) {
    .background-image_section {
      margin-top: 30px;
    }
    .background-image-section-content {
      flex-direction: column;
      padding: 0;
    }
    .background-image_section img {
      margin-bottom: 32px;
    }
    .background-image_section_subtitle {
      font-size: 14px;
    }
    .background-image_section_title {
      font-size: 18px;
    }
    .background-image_section_text {
      font-size: 16px;
      margin-bottom: 30px;
    }
    .background-image_section-block_content {
      max-width: 300px;
      padding: 0 15px;
      margin: 0 auto 100px;
    }
    .background-image_section_button:link,
    .background-image_section_button:visited {
      text-align: center;
      width: 100%;
    }
  }
</style>
<div class="background-image_section">
  <img src="{{ section.settings.image | image_url }}" alt="{{ section.settings.title }}">
  <div class="background-image-section-content page-width">
    <div class="background-image_section-block_content">
      <div class="background-image_section_subtitle">
        {% render "stacks-icon" %}<span>{{ section.settings.subtitle }}</span>
      </div>
      <h3 class="background-image_section_title">{{ section.settings.title }}</h3>
      <p class="background-image_section_text">{{ section.settings.text }}</p>
      <a href="{{ section.settings.btn_url }}" class="background-image_section_button">{{ section.settings.btn_text }}</a>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Background image-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Background image-section"
    }
  ]
}
{% endschema %}
