{% style %}
  @import url('https://fonts.cdnfonts.com/css/druk-wide-bold');
  .product-dropdown_section {
    margin-bottom: 30px;
  }

  .product-information_block {
    background-color: #F7F7F7;
    border-radius: 15px;
    padding: 27px 21px;
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 70px;
  }
  .product-information_block-content {
    display: flex;
    color: #000;
    flex-direction: column;
    justify-content: space-between;
  }
  .product-information_block-title {
    text-transform: uppercase;
    font-size: 40px;
    font-family: 'Druk Wide Bold'
    , sans-serif;
    margin: 0 0 26px;
    text-wrap: nowrap;
  }
  .product-information_block-text {
    font-size: 16px;
    margin: 0 0 26px;
  }
  .product-information_block-image {
    overflow: hidden;
    line-height: 0;
    border-radius: 15px;
    height: 224px;
  }
  .product-information_block-image img {
    height: 100%;
  }

  .product-information_block-link:link,
  .product-information_block-link:visited {
    display: inline-block;
    background-color: #000;
    color: #fff;
    border-radius: 50px;
    padding: 10px 58px;
    transition: all 0.3s;
    margin-right: 25px;
    font-size: 12px;
    text-decoration: none;
    font-weight: 700;
  }
  .product-information_block-link:hover,
  .product-information_block-link:active {
    background-color: #DA9DFF;
    color: #000;
  }
  .product-information_block-button {
    background: none;
    font-size: 12px;
    text-decoration: underline;
    border: none;
    cursor: pointer;
    text-transform: capitalize;
  }
  .product-dropdown_block {
    display: flex;
    flex-direction: column;
    max-height: 0;
    transition: all 0.5s;
    overflow: hidden;
    align-items: center;
  }
  .product-dropdown_block .svg-container {
    margin: 30px 0;
  }
  .product-dropdown_buy-block {
    margin-bottom: 30px;
  }
  .product-dropdown_buy-block p {
    font-size: 16px;
    color: #000;
    margin: 5px 0 0;
  }
  .product-dropdown_buy-button:link,
  .product-dropdown_buy-button:visited {
    display: flex;
    padding: 18px 90px;
    background-color: #4BFE85;
    color: #000;
    border-radius: 50px;
    font-size: 16px;
    font-weight: 700;
    transition: all 0.3s;
    line-height: 1;
    text-decoration: none;
    align-items: center;
    justify-content: center;
    grid-column: 3;
  }
  .product-dropdown_buy-button:hover,
  .product-dropdown_buy-button:active {
    background-color: #DA9DFF;
  }
  .product-dropdown_buy-block-title {
    font-size: 24px;
    margin: 0;
    font-weight: 700;
  }
  .product-dropdown_benefits {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 12px;
  }
  .product-benefit {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 22px;
    background-color: #F7F7F7;
    border-radius: 15px;
    gap: 20px;
  }
  .product-benefit_text {
    margin: 0;
    font-size: 20px;
    font-weight: 700;
  }
  .product-benefit_icon {
    display: flex;
  }
  .product-dropdown-content {
    margin-top: 30px;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 12px;
  }
  .product-dropdown-content-text {
    grid-column: span 2;
  }
  .product-dropdown-content-text p {
    font-size: 16px;
  }
  .product-dropdown-content-text h4 {
    font-size: 24px;
    font-weight: 700;
    margin: 0 0 15px;
  }
  .product-dropdown-image {
    overflow: hidden;
    line-height: 0;
    border-radius: 15px;
  }
  .product-dropdown-image img {
    width: 100%;
  }
  .open {
    max-height: 1000px
  }


  /*
   .product-dropdown_block > .svg-container{
   max-height:0px;
   transition: all 0.5s
   }
   .open > .svg-container{
   max-height:100px;
   }
*/
  @media screen and (max-width: 1000px) {
    .product-information_block {
      gap: 20px;
    }
  }
  @media screen and (max-width: 820px) {
    .product-information_block {
      display: flex;
      flex-direction: column-reverse;
      padding: 0;
      gap: 0;
      margin-bottom: 20px;
    }
    .product-information_block-image {
      margin: 10px 10px 0;
    }
    .product-information_block-content {
      padding: 25px 20px 20px;

    }
    .product-information_block-title {
      font-size: 32px;
    }
    .product-dropdown_buy-block-title {
      font-size: 20px;
    }
    .product-dropdown_buy-block-subtitle {
      font-size: 14px;
    }
    .product-benefit_text {
      font-size: 14px;
    }
    .product-information_block-text,
    .product-information_block-link,
    .product-information_block-button {
      font-size: 14px;
    }
    .product-dropdown-content-text h3 {
      font-size: 20px;
    }
    .product-dropdown-content-text p {
      font-size: 14px;
    }
    .product-information_block-link {
      padding: 15px 40px !important;
      font-size: 14px !important;
    }
    .product-information_block-button {
      color: #000;
    }
    .product-dropdown_buy-button:link {
      display: none;
    }
    .product-dropdown_buy-block {
      display: block;
    }
    .product-benefit {
      padding: 17px;
      font-size: 14px;
    }
    .product-benefit:nth-child(3) {
      grid-column: span 2;
    }
    .product-benefit img {
      max-width: 20px;
    }
    .product-dropdown_benefits {
      grid-template-columns: 1fr 1fr;
    }
    .product-dropdown-content {
      display: flex;
      flex-direction: column-reverse;
      padding: 0;
      gap: 0;
    }
    .product-dropdown-content-text {
      padding: 25px 0 0;
    }
  }
  @media screen and (max-width: 500px) {
    .product-dropdown_benefits {
      gap: 5px;
    }
    .product-information_block-image {
      height: auto;
    }
    .product-information_block-image img {
      width: 100%;
      height: auto;
    }
    .product-benefit {
      padding: 10px;
      gap: 10px;
    }
    .product-benefit_text {
      font-size: 12px;
    }
    .product-benefit img {
      max-width: 15px;
    }
    .product-information_block-link:link,
    .product-information_block-link:visited {
      padding: 8px 25px !important;
      font-size: 12px;
      margin-right: 10px;
    }
    .product-information_block-button {
      font-size: 12px
    }
    .product-information_block-title {
      font-size: 26px;
    }
  }
  @media screen and (max-width: 300px) {
    .product-information_block-title {
      font-size: 20px;
    }
    .product-information_block-content {
      padding: 15px 10px 10px;
    }
    .product-information_block-link:link,
    .product-information_block-link:visited {
      padding: 8px 15px !important;
      font-size: 12px;
      margin-right: 10px;
    }
  }
{% endstyle %}
