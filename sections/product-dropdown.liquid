      <div class="product-dropdown_benefits">
        {% for block in section.blocks %}
          <div class="product-benefit">
            <div class="product-benefit_icon">
              <img src="{{ block.settings.image | image_url }}" loading="lazy">
            </div>
            <p class="product-benefit_text">{{ block.settings.text }}</p>
          </div>
