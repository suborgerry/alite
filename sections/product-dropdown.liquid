<div class="product-dropdown_section page-width" id={{ section.settings.id }}>
  <div class="product-information_block">
    {% if section.settings.image_first %}
      <div class="product-information_block-image">
        <a href="{{ section.settings.link-img }}">
          <img src="{{ section.settings.image | image_url }}" loading="lazy">
        </a>
      </div>
      <div class="product-information_block-content">
        <h3 class="product-information_block-title">{{ section.settings.title }}</h3>
        <div>
          <p class="product-information_block-text">{{ section.settings.text }}</p>
          <a class="product-information_block-link" href="{{ section.settings.link }}">
            {{- 'ts.updated_banner.button' | t -}}
          </a>
          <button class="product-information_block-button">{{ 'ts.updated_banner.link' | t }}</button>
        </div>
      </div>
    {% else %}
      <div class="product-information_block-content">
        <h3 class="product-information_block-title">{{ section.settings.title }}</h3>
        <div>
          <p class="product-information_block-text">{{ section.settings.text }}</p>
          <a class="product-information_block-link" href="{{ section.settings.link }}">
            {{- 'ts.updated_banner.button' | t -}}
          </a>
          <button class="product-information_block-button">{{ 'ts.updated_banner.link' | t }}</button>
        </div>
      </div>
      <div class="product-information_block-image">
        <a href="{{ section.settings.link-img }}">
          <img src="{{ section.settings.image | image_url }}" loading="lazy">
        </a>
      </div>
    {% endif %}
