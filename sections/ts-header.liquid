<style>

  .language-line {
    display: none;
  }
  .localeItem:hover svg {
    display: block;
  }
  .language-container {
    position: absolute;
    top: -40px;
    display: grid;
    right: 11%;
  }
  .language_img-container {
    display: flex;
    width: 22px;
    align-items: center;
    justify-content: center;
    border-radius: 5px;
    overflow: hidden;
  }
  .dropup {
    position: relative;
    display: inline-block;
  }

  .localeBtn {
    background-color: #000;
    color: white;
    padding: 5px 15px;
    font-size: 16px;
    border-radius: 41px;
    border: 2px solid #fff;
    cursor: pointer;
    display: flex;
    align-items: center;
    text-transform: uppercase;
    justify-content: space-between;
    gap: 15px;
  }

  .localeBtn:hover {
    border: 2px solid #4BFE85;
  }

  .localeBtn:active {
    border: 2px solid #4BFE85;
  }

  .dropup-content {
    display: none;
    z-index: 1;
    border-radius: 10px;
    background-color: rgb(0 0 0 / 60%);
    color: #fff;
    backdrop-filter: blur(10px);
    opacity: 0;
    transform: translateY(-20px);
    transition: opacity 0.3s ease
    , transform 0.3s ease;
    visibility: hidden;
  }

  .show1 + .dropup-content {
    display: block;
    opacity: 1;
    transform: translateY(0);
    visibility: visible;
    overflow: scroll;
    max-height: 72vh;
    scrollbar-width: none;
  }
  .language-svg-container svg {
    transition: all 0.3s;
    transform: rotate(180deg);
  }
  .show1 .language-svg-container svg {
    transform: rotate(0deg);
  }

  .dropup-content a {
    color: #ffffff;
    font-size: 16px;
    padding: 10px;
    display: block;
    text-align: center;
    display: flex;
    align-items: center;
    text-transform: uppercase;
    justify-content: center;
    flex-direction: column;
    text-decoration: none;
  }

  #shopify-section-{{ section.id }} {
    position: sticky;
    top: 0;
    width: 100%;
    z-index: 15;
    transition: transform 0.3s;
  }

  #shopify-section-{{ section.id }}
  .ts-hide {
    transform: translateY(-55px);
  }

  {% if request.locale.iso_code == 'nl' %}
    @media screen and (min-width: 750px) {
      .ts-header__top-content .ts-container {
        grid-template-columns: 220px 1fr 1fr 1fr 220px;
      }

      .ts-header__controls {
        max-width: 220px;
      }
    }
  {% endif %}
  .ts-header-none li::before {
    content: none !important;
  }

</style>

