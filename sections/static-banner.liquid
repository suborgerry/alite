{% style %}
  @import url('https://fonts.cdnfonts.com/css/druk-wide-bold');
  .static-banner-title{
    font-family: 'Druk Wide Bold', sans-serif;
    color:#000;
    font-size:40px;
    line-height:1 !important;
      word-break: keep-all;
  white-space: normal;
    margin-bottom:30px;
  }
  .static-banner-text{
    color:#000;
    font-size:16px;
  }
   .static-banner-text span{
    position:relative;
    color:#000;
    font-weight:600;
    z-index: 1;
  }
  .static-banner-text span::before{
  content: "";
  position: absolute;
  top: 0;
  left: -5%;
  width: 110%;
  height: 100%;
  background-color: #DA9DFF; 
  z-index: -1;
  transform:rotate(358deg);
  border-radius: 2px;
  padding: 2px 6px;
  }
  .static-banner_section{
  background-color: #F7F7F7; 
    padding:25px;
    margin-bottom:30px;
  }
  .static-banner_container{
    display:flex;
    justify-content:space-between;
    align-items:center;
    max-width:800px;
    gap:80px;
    margin:0 auto;
    text-align:center;
  }
  .static-banner_container img{
    max-height: 200px;
  }
  
  @media screen and (max-width:1000px){
    .static-banner_section{
      background-color:#F7F7F7;
      padding:20px 15px;
    }
    .static-banner_container{
      display:grid;
      grid-template-columns:1fr 1fr;
      text-align:start;
      gap:20px;
    }
      .static-banner-title{
    color:#000;
    font-size:20px;
              margin:0 0 15px;
  }
  .static-banner-text{
    color:#000;
    font-size:14px;
  }
    .static-banner-text span{
    position:relative;
    color:#000;
    font-weight:400;
    z-index: 1;
  }
  .static-banner-text span::before{
  content: "";
  position: absolute;
  top: 0;
  left: -5%;
  width: 110%;
  height: 100%;
  background-color: #F7F7F7; 
  z-index: -1;
  transform:rotate(358deg);
  border-radius: 2px;
  padding: 2px 6px;
  }
    .static-banner_section img{
      grid-column:2;
      width:100%;
      grid-row:1;
    }
    static-banner-content{
      grid-column:1;
      grid-row:1;
    }
  }
{% endstyle %}
<div class="static-banner_section">
  <div class="static-banner_container">
    <img src="{{ section.settings.image | image_url }}">
    <div class="static-banner-content">
      <h1 class="static-banner-title">{{ section.settings.title }}</h1>
      <p class="static-banner-text">{{ section.settings.text }}</p>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Static banner",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "html",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "presets": [
      {
        "name": "Static banner"
      }
    ]
  }
{% endschema %}